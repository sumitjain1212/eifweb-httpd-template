<Macro MACRO_VH_REDIRECTOR ${MACRO_VH_SRC_URL_FQDN} ${MACRO_VH_SRC_URL_SHORT} ${MACRO_VH_DEST_URL_FQDN}>
    ServerName ${MACRO_VH_SRC_URL_FQDN}
    ServerAlias ${MACRO_VH_SRC_URL_FQDN} ${MACRO_VH_SRC_URL_SHORT}

    ErrorLog     ${EIF_APACHE_LOGDIR}/common/${MACRO_VH_SRC_URL_SHORT}_error_log
    TransferLog  ${EIF_APACHE_LOGDIR}/common/${MACRO_VH_SRC_URL_SHORT}_access_log

    RewriteRule ^/?(.*)             http://${MACRO_VH_DEST_URL_FQDN}/$1 [R,L]
</Macro>

