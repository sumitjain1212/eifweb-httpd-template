<Macro MACRO_SNIPPET_SSO_DIRECTORY ${MACRO_VH_DOCROOT} ${MACRO_VH_PATH}>
  <If "reqenv('OIDC_CLAIM_access_level') =~ /^[0-3]$/">
    Require expr env('OIDC_CLAIM_access_level') == '4'
  </If>
  <Directory ${MACRO_VH_DOCROOT}${MACRO_VH_PATH}>
    Include ${EIF_APACHE_CONFDIR}/auth.conf
    <Limit GET POST>
      Require valid-user
    </Limit>
  </Directory>
</Macro>
