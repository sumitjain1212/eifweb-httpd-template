<Macro MACRO_SNIPPET_SSO_LOCATION ${MACRO_VH_LOCATION}>
  <If "reqenv('OIDC_CLAIM_access_level') =~ /^[0-3]$/">
    Require expr env('OIDC_CLAIM_access_level') == '4'
  </If>
  <LocationMatch "${MACRO_VH_LOCATION}">
    Include ${EIF_APACHE_CONFDIR}/auth.conf
    <Limit GET POST>
      Require valid-user
    </Limit>
  </LocationMatch>
</Macro>
